<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.conductor.ContenidoConductor">

    <FrameLayout
        android:id="@+id/containerConductor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="65dp"

        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/botonNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorNegro"
        app:itemBackground="@color/colorNegro"
        app:itemTextColor="@color/colorBlanco"
        app:itemIconTint="@color/colorBlanco"
        app:menu="@menu/main_menu_conductor"
        android:padding="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/photoImageView"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="8dp"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="@string/app_name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/idTextView"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:visibility="invisible"
            android:textSize="14sp" />
    </LinearLayout>


    <Button
        android:layout_marginTop="550dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salir"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:onClick="logOutConductor"
        />
    <Button
        android:layout_marginTop="600dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="revokeConductor"
        android:text="Revocar" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>