<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.cliente.FoodDetail">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameFoodDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_margin="10dp"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/colorNegro"
            />
        <ImageView
            android:id="@+id/picFoodDetail"
            android:layout_width="match_parent"
            android:src="@drawable/hambu"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:layout_height="220dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="300dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/descFoodDetail"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/app_name"
                android:textSize="20sp"
                android:textStyle="normal"
                android:textColor="@color/colorNegro"
                />
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="S/."
                android:layout_margin="5dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorGmail"
                />
            <TextView
                android:id="@+id/priceFoodDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:layout_margin="5dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorGmail"
                />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>