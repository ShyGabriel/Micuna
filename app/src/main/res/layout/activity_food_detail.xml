<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.cliente.FoodDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameFoodDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_margin="10dp"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/colorNegro"
            />
        <ImageView
            android:contentDescription="@string/app_name"
            android:id="@+id/picFoodDetail"
            android:layout_width="match_parent"
            android:src="@drawable/hambu"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:layout_height="220dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:gravity="center|start"
            android:layout_height="80dp"
            >
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="S/."
                android:layout_margin="5dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorGmail"
                />
            <TextView
                android:id="@+id/priceFoodDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:layout_margin="5dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/colorGmail"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_back"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:backgroundTint="@color/colorBlanco"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:src="@drawable/carrito" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="300dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/descFoodDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/app_name"
                android:textSize="20sp"
                android:textStyle="normal"
                android:textColor="@color/colorNegro"
                />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>